<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#42A5F5"
    tools:context="com.example.aditya.ATOMmodifiable.cProductSelectionActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/doc_blur"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="42sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose a Category"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_weight="1"
            android:id="@+id/relativeTab"
            android:elevation="8dp"
            android:background="#5b0099cc"
            android:layout_alignParentTop="true"
            android:layout_margin="12dp"
            android:onClick="tabletClick">

            <ImageView
                android:layout_width="?android:attr/listPreferredItemHeight"
                android:layout_height="match_parent"
                android:id="@+id/tabletImg"
                android:src="@drawable/tabimg"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tabletImg"
                android:text="Tablets"
                android:textSize="28dp"
                android:gravity="center"
                android:textStyle="bold"
                />
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_weight="1"
                android:id="@+id/relativeBar"
                android:elevation="8dp"
                android:background="#5b0099cc"
                android:layout_margin="12dp"
                android:onClick="barClick">

                <ImageView
                    android:layout_width="?android:attr/listPreferredItemHeight"
                    android:layout_height="match_parent"
                    android:id="@+id/barImg"
                    android:src="@drawable/nutriimg"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/barImg"
                    android:text="Nutrition Bar Chocolates"
                    android:textSize="26dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
            </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_weight="1"
            android:id="@+id/relativeSanitizer"
            android:elevation="8dp"
            android:background="#5b0099cc"
            android:layout_margin="12dp"
            android:onClick="sanzClick">

            <ImageView
                android:layout_width="?android:attr/listPreferredItemHeight"
                android:layout_height="match_parent"
                android:id="@+id/sanzImg"
                android:src="@drawable/detsanz"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/sanzImg"
                android:text="Hand Sanitizer"
                android:textSize="26dp"
                android:gravity="center"
                android:textStyle="bold"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_weight="1"
            android:id="@+id/relativeCond"
            android:elevation="8dp"
            android:background="#5b0099cc"
            android:layout_margin="12dp"
            android:onClick="condClick">

            <ImageView
                android:layout_width="?android:attr/listPreferredItemHeight"
                android:layout_height="match_parent"
                android:id="@+id/condImg"
                android:scaleType="centerCrop"
                android:src="@drawable/condimg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/condImg"
                android:text="Condoms Packets"
                android:textSize="28dp"
                android:gravity="center"
                android:textStyle="bold"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_weight="1"
            android:id="@+id/relativepads"
            android:elevation="8dp"
            android:background="#5b0099cc"
            android:layout_margin="12dp"
            android:onClick="sanClick">

            <ImageView
                android:layout_width="?android:attr/listPreferredItemHeight"
                android:layout_height="match_parent"
                android:id="@+id/padsImg"
                android:scaleType="centerCrop"
                android:src="@drawable/sanitimg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/padsImg"
                android:text="Sanitary Napkins"
                android:textSize="28dp"
                android:gravity="center"
                android:textStyle="bold"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_weight="1"
            android:id="@+id/relativebottle"
            android:elevation="8dp"
            android:background="#5b0099cc"
            android:layout_margin="12dp"
            android:onClick="drinkClick">

            <ImageView
                android:layout_width="?android:attr/listPreferredItemHeight"
                android:layout_height="match_parent"
                android:id="@+id/bottleImg"
                android:scaleType="centerCrop"
                android:src="@drawable/waterimg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/bottleImg"
                android:text="Drinks"
                android:textSize="28dp"
                android:gravity="center"
                android:textStyle="bold"
                />
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
